{% extends "Project/layout.html.twig" %}

{% block title %}
    {{ 'suivi.etude_modifier'|trans({}, 'project') }} - {{ parent() }}
{% endblock %}

{% block content_title %}
    {{ 'suivi.etude_modifier'|trans({}, 'project') }}
{% endblock %}

{% block breadcrumb_active %}
    {{ 'suivi.etude_modifier'|trans({}, 'project') }}
{% endblock %}


{% block content_bundle %}
    {% include "Project/Etude/formulaire.html.twig" %}
        {% if is_granted('ROLE_CA') %}
            <br/>
            <form class="bootbox-confirm inline" data-content="{{ 'suivi.etude_supprimer_confirm'|trans({}, 'project') }} ?"
                action="{{ path('project_etude_supprimer', { 'nom': etude.nom }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger">{{ 'suivi.etude_supprimer'|trans({}, 'project') }}</button>
            </form>
        {% endif %}
{% endblock %}
