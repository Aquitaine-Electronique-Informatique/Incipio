{# Formulaire d'ajout d'un suivi sur une etude #}

{{ form_start(form) }}

<table class="table table-bordered table-striped standard">
    <tr>
        <th>
            {{ form_label(form.date) }}
            {{ form_errors(form.date) }}
        </th>
        <td>{{ form_widget(form.date) }}</td>
    </tr>
    <tr>
        <th>
            {{ form_label(form.etat) }}
            {{ form_errors(form.etat) }}
        </th>
        <td>{{ form_widget(form.etat) }}</td>
    </tr>
    <tr>
        <th>
            {{ form_label(form.todo) }}
            {{ form_errors(form.todo) }}
        </th>
        <td>{{ form_widget(form.todo) }}</td>
    </tr>
</table>
{{ form_widget(form) }}

<input type="submit" value="{{ 'suivi.suivi_nouveau_enregistrer'|trans({}, 'suivi') }}" class="btn btn-success"/>

{{ form_end(form) }}

