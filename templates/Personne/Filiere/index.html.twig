{# Liste of Filieres. Displayed on Poste:index.html.twig if user is granted ROLE_ADMIN #}

<h2>{{ 'filiere.liste_filiere'|trans({}, 'personne') }}</h2>

<a href="{{ path('MgatePersonne_filiere_ajouter') }}" class="btn btn-info">
    {{ 'dashboard.filiere_ajouter'|trans({}, 'dashboard') }}
</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'filiere.filieres'|trans({}, 'personne') }}</th>
    </tr>
    </thead>
    <tbody>
    {% for filiere in filieres %}
        {% if loop.index0 % 2 == 0 or loop.first %}
            <tr>
        {% endif %}
        <td>
            <a href="{{ path('MgatePersonne_filiere_modifier', {'id': filiere.id}) }}">
                <i class="fa fa-pencil"></i>
                {{ filiere.nom }}
            </a>
        </td>
        {% if loop.index0 % 2 == 1 or loop.last %}
            </tr>
        {% endif %}
    {% else %}
        <tr>
            <td>{{ 'filiere.liste_filiere_vide'|trans({}, 'personne') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
